{
    "name": "${artifactId}",
    "version": "0.0.1",
    "description": "this package.json is only for git hooks",
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "husky": "^2.7.0",
        "standard-version": "^6.0.1"
    },
    "scripts": {
        "commit": "npx git-cz",
        "release": "standard-version"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}